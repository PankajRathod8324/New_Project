                                    <i
                                        class="fa-solid fa-arrow-down @(ViewBag.SortBy == "Role" && !ViewBag.IsAsc ? "active-icon" : "inactive-icon")"></i>
                                </span>
                            </a>
                        </th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
